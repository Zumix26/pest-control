{
    "name": "pest-control/trap-monitoring",
    "type": "project",
    "description": "IoT Pest Control Trap Monitoring System",
    "keywords": ["laravel", "iot", "pest-control", "ddd"],
    "license": "MIT",
    "require": {
        "php": "^8.5",
        "laravel/framework": "^12.46"
    },
    "require-dev": {
        "larastan/larastan": "^3.8",
        "laravel/pint": "^1.15",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^4.3",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "test": "pest",
        "test:coverage": "pest --coverage",
        "phpstan": "phpstan analyse --memory-limit=512M",
        "pint": "pint",
        "pint:test": "pint --test"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
